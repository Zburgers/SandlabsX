# Backend Server Configuration
PORT=3001
NODE_ENV=development

# PostgreSQL Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=guacamole_db
DB_USER=guacamole_user
DB_PASSWORD=guacamole_pass

# Guacamole Configuration
GUAC_BASE_URL=http://localhost:8081/guacamole
GUAC_ADMIN_USER=guacadmin
GUAC_ADMIN_PASS=guacadmin

# QEMU Configuration
BASE_IMAGE_PATH=/path/to/images/base.qcow2
OVERLAYS_PATH=/path/to/overlays
VMS_PATH=/path/to/vms
VNC_START_PORT=5900
QEMU_RAM=2048
QEMU_CPUS=2

# State Management
STATE_FILE=/path/to/backend/nodes-state.json

# JWT Configuration
JWT_SECRET=your-secret-key-here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
